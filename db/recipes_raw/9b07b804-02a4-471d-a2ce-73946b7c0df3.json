{
    "title": "Salad Dressing for Storage",
    "ingredients": [
        "200 g balsamic vinegar",
        "250 g water",
        "80 g sugar",
        "20 g salt",
        "20 g vegetable broth powder",
        "200 g sour cream or crème fraîche",
        "300 g natural yogurt, 0.1% fat",
        "60 g medium spicy mustard",
        "200 g oil",
        "¼ tsp black pepper",
        "salad herbs to taste"
    ],
